# Environment
ENVIRONMENT=development

# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Stripe Payment Provider
PAYMENT_PROVIDER=stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# Email Provider (choose one: sendgrid, mailgun, postmark, aws_ses, resend)
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=noreply@yourdomain.com

# SendGrid (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx

# Mailgun (if EMAIL_PROVIDER=mailgun)
MAILGUN_API_KEY=key-xxxxxxxxxxxxx
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_EU_REGION=false

# Postmark (if EMAIL_PROVIDER=postmark)
POSTMARK_API_KEY=xxxxxxxxxxxxx
POSTMARK_MESSAGE_STREAM=outbound

# AWS SES (if EMAIL_PROVIDER=aws_ses)
AWS_ACCESS_KEY_ID=AKIAxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxx
AWS_SES_REGION=us-east-1
AWS_SES_CONFIGURATION_SET=optional-config-set

# Resend (if EMAIL_PROVIDER=resend)
RESEND_API_KEY=re_xxxxxxxxxxxxx

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Docker Registry (optional)
DOCKER_REGISTRY_URL=your_docker_registry_url
DOCKER_REGISTRY_TOKEN=your_docker_registry_token

# API URLs
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
